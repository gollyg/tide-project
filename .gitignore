# To ignore OS temporary files use global .gitignore
# https://help.github.com/articles/ignoring-files/#create-a-global-gitignore

# Ignore directories generated by Composer
/drush/contrib/
/vendor/
/docroot/core/
/docroot/modules/contrib/
/docroot/themes/contrib/
/docroot/profiles/contrib/
/docroot/libraries/

# Ignore sensitive information
/docroot/sites/example*
/docroot/sites/*/settings.local.php
/docroot/sites/*/services.local.yml

# Ignore Drupal's file directory
/docroot/sites/*/files/

# Ignore SimpleTest multi-site environment.
/docroot/sites/simpletest

# Ignore local dev files.
.data
screenshots
/local

# Ignore dependencies cache files
vendor
node_modules

# Compiled assets.
docroot/themes/**/build
